@model UcherMBlog.ViewModels.Web.ChangePasswordViewModel
@{
    ViewBag.Title = "Change password";
}
@section Scripts {
    <script src="~/lib/angular/angular.min.js"></script>
}
<div class="row" ng-app>
    <div class="col-md-4 col-md-offset-4">
        <form method="post" action="?" novalidate name="changePasswordForm">
            @Html.AntiForgeryToken()
            <div asp-validation-summary="ModelOnly"></div>
            <div class="form-group">
                <label asp-for="CurrentPassword"></label>
                <input type="password" name="currentPassword" asp-for="CurrentPassword" ng-model="vm.currentPassword" class="form-control" required ng-minlength="5" />
                <span ng-show="changePasswordForm.currentPassword.$error.required" class="text-warning">Current password is required.</span>
                <span ng-show="changePasswordForm.currentPassword.$error.minlength" class="text-warning">Current password must be at least five characters.</span>
            </div>

            <div class="form-group">
                <label asp-for="NewPassword"></label>
                <input type="password" name="newPassword" asp-for="NewPassword" ng-model="vm.newPassword" class="form-control" required ng-minlength="5" />
                <span ng-show="changePasswordForm.newPassword.$error.required" class="text-warning">New password is required.</span>
                <span ng-show="changePasswordForm.newPassword.$error.minlength" class="text-warning">New password must be at least five characters.</span>
            </div>
            <div class="form-group">
                <input type="submit" value="Change password" class="btn btn-success" ng-disabled="!changePasswordForm.$valid" />
                <a asp-controller="Home" asp-action="Index" class="btn btn-default">Cancel</a>
            </div>
        </form>
    </div>
</div>